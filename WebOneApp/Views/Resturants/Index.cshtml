@model IEnumerable<WebOneApp.Models.Resturant>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h2>Resturants</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card" style="width:320px;height:300px;">
                <img style="width:250px;height:150px" class="card-img-top" src=@item.imgPath alt="Card image">
                <div class="card-body">
                    <h4>@item.name</h4>
                    <div class="row">
                        <div class="col-md-2 btn btn-primary">
                            @Html.ActionLink("Edit", "Edit", new { id = item.id })
                        </div>
                        <div class="col-md-2 btn btn-primary">
                            @Html.ActionLink("Details", "Details", new { id = item.id })
                        </div>
                        <div class="col-md-2 btn btn-primary">
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
